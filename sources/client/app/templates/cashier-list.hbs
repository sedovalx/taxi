<div class="list">
    <div class="list-filter">
        <a class="btn btn-primary filter-button" data-toggle="collapse" href="#filter" aria-expanded="false" aria-controls="filter">
            Фильтр
        </a>
        <div class="collapse filter-body" id="filter">
            <div class="well">
                <form class="form-horizontal">
                    {{property-row title="Машина" value=filter.car}}
                    {{property-row title="Водитель" value=filter.driver}}
                    {{#property-row title="Дата следующего кассового дня" errors=errors.filter.dateInput}}
                        {{datetime-picker value=filter.dateInput}}
                    {{/property-row}}
                </form>
                <button type="button" class="btn btn-primary" {{action "filterTable"}}> Фильтровать </button>
                <button type="button" class="btn btn-primary" {{action "clearFilter"}}> Очистить фильтр </button>
            </div>
        </div>
    </div>
    <div class="table">
      {{table-component
      columns=columns
      content=data
      hasFooter=false
      selection=selectedRow}}
    </div>
    <div class="command-panel btn-toolbar pull-right" role="toolbar">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" {{action "createPaymentOperation"}}  {{bind-attr disabled=selectionRentIsEmpty}}>
                <i class="fa fa-rub"></i> Создать платеж
            </button>
            <button type="button" class="btn btn-primary" {{action "createChargeOperation"}} {{bind-attr disabled=selectionRentIsEmpty}}>
                <i class="fa fa-taxi"></i> Создать списание
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" {{action "createRent"}} {{bind-attr disabled=selectionRentIsNotEmpty}}>
                <i class="fa fa-user-plus"></i> Создать аренду
            </button>
            <button type="button" class="btn btn-primary" {{action "gotoRentEdit"}} {{bind-attr disabled=selectionRentIsEmpty}}>
                <i class="fa fa-edit"></i> Управление арендой
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" {{action "gotoCash"}}>
                <i class="fa fa-rub"></i> Касса
            </button>
        </div>
    </div>
</div>